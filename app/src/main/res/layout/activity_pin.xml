<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PinActivity">

    <TextView
        android:text="@string/pin_code"
        android:textSize="30sp"
        android:textColor="@color/colorTextColorWhite"
        android:layout_marginTop="143.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/device_name_textview"
        android:text="@string/device_unavailable"
        android:textSize="16sp"
        android:textColor="@color/colorTextColorWhite"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/pin_textview"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pin_1_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginRight="12dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/pin_2_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginRight="12dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/pin_3_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginRight="6dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/pin_4_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginLeft="6dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/pin_5_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginLeft="12dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/pin_6_textview"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/colorTextColorWhite"
            android:layout_marginLeft="12dp"
            android:background="@drawable/layer_list_pin"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>

</LinearLayout>